@model IEnumerable<Store_Management_System.Models.ViewModels.ProductRetriveVM>
@{
    ViewData["Title"] = "Index";
}
<h1 class="text-info">Product Information</h1>
<br />

<div class="container-fluid">
    <p class="text-right">
        <a asp-action="Create" class="btn btn-outline-primary btn-sm">Create New</a>
    </p>
    <table class="table table-info table-bordered table-striped table-hover table-sm">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(o => o.ProductName)</th>
                <th>@Html.DisplayNameFor(o => o.Name)</th>
                <th>@Html.DisplayNameFor(o => o.ProductQTY)</th>
                <th>@Html.DisplayNameFor(o => o.BuyingPrice)</th>
                <th>@Html.DisplayNameFor(o => o.SellingPrice)</th>
                <th>@Html.DisplayNameFor(o => o.Image)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Name</td>
                    <td>@item.ProductQTY</td>
                    <td>@item.BuyingPrice</td>
                    <td>@item.SellingPrice</td>

                    <td>
                        <img src="@Url.Content(item.Image)" alt="Photo of @item.ProductName" width="100" />
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="Products" asp-route-id="@item.ProductId" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a asp-action="Delete" asp-controller="Products" asp-route-id="@item.ProductId" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
