@model Store_Management_System.Models.ViewModels.ProductVM
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div class="row">
    <div class="col-md-4 offset-2">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ProductName" class="col-form-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="form-group ">
                <label asp-for="CategoryId" class="col-form-label col-2"></label>
                <div class="col-10">
                    <select class="form-control col-4" asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.ProductCategory,"CategoryId","Name"))">
                        <option value="">-----Select-----</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ProductQTY" class="col-form-label"></label>
                <input asp-for="ProductQTY" class="form-control" />
                <span asp-validation-for="ProductQTY" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BuyingPrice" class="col-form-label"></label>
                <input asp-for="BuyingPrice" class="form-control" />
                <span asp-validation-for="BuyingPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SellingPrice" class="col-form-label"></label>
                <input asp-for="SellingPrice" class="form-control" />
                <span asp-validation-for="SellingPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Image" class="col-form-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">

                <input type="submit" class="btn btn-success" value="Save" />

            </div>
        </form>
    </div>
</div>